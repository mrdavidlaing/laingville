{
  "permissions": {
    "allow": [
      "Bash(make:*)",
      "Bash(find:*)",
      "Bash(shellcheck:*)",
      "Bash(shellspec:*)",
      "Bash(time shellspec:*)",
      "Bash(sed:*)",
      "Bash(mkdir:*)",
      "WebSearch",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh run watch:*)",
      "Bash(git push:*)",
      "Bash(git cherry-pick:*)",
      "Bash(ssh.exe:*)",
      "Bash(pwsh.exe:*)",
      "Bash(GIT_SEQUENCE_EDITOR=\"cat > /dev/null && echo ''pick 0fafc4a\nsquash 9e57534\npick 77d268f'' >\" git rebase -i HEAD~3)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/format-hook.sh"
          }
        ]
      }
    ]
  }
}