{
  "permissions": {
    "allow": [
      "Bash(make lint:*)",
      "Bash(find:*)",
      "Bash(shellcheck:*)",
      "Bash(time shellspec:*)",
      "Bash(sed:*)",
      "Bash(lscpu:*)",
      "WebSearch",
      "Bash(shellspec:*)",
      "WebFetch(domain:wezterm.org)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:pester.dev)",
      "Bash(pwsh.exe:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && make format"
          }
        ]
      }
    ]
  }
}