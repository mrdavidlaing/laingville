{
  "permissions": {
    "allow": [
      "Bash(make lint:*)",
      "Bash(find:*)",
      "Bash(shellcheck:*)",
      "Bash(time shellspec:*)",
      "Bash(sed:*)",
      "Bash(lscpu:*)",
      "WebSearch",
      "Bash(shellspec:*)",
      "WebFetch(domain:wezterm.org)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:pester.dev)",
      "WebFetch(domain:wezfurlong.org)",
      "Bash(pwsh.exe:*)",
      "Bash(\"/mnt/c/Program Files/PowerShell/7/pwsh.exe\" -ExecutionPolicy Bypass -File scripts/lint-powershell.ps1)",
      "Bash(\"/mnt/c/Program Files/PowerShell/7/pwsh.exe\" -ExecutionPolicy Bypass -NoProfile -Command \"Invoke-ScriptAnalyzer -Path ./lib/setup-user.functions.ps1 -Severity Warning,Error\")",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)",
      "Bash(git push:*)",
      "Bash(make:*)",
      "Bash(chmod:*)",
      "Bash(gh issue view:*)",
      "Bash(mkdir:*)",
      "WebFetch(domain:www.wiki.freshtomato.org)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && make format"
          }
        ]
      }
    ]
  }
}