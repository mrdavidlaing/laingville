#!/bin/bash

set -euo pipefail

trap 'echo "An unexpected error occurred. Re-run with --dry-run for a preview." >&2' ERR

# Source functions
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$SCRIPT_DIR/setup-server.functions.bash"

# Argument parsing
usage() { echo "Usage: $0 [--dry-run] [-h|--help]"; }
DRY_RUN=false
while [[ $# -gt 0 ]]; do
    case "$1" in
        --dry-run)
            DRY_RUN=true; shift ;;
        -h|--help)
            usage; exit 0 ;;
        *)
            echo "Unknown option: $1" >&2
            usage; exit 1 ;;
    esac
done

# Detect current hostname
CURRENT_HOSTNAME="$(hostname)"

# Ensure servers root exists
SERVERS_ROOT="$SCRIPT_DIR/servers"
if [ ! -d "$SERVERS_ROOT" ]; then
    echo "Error: Servers directory not found: $SERVERS_ROOT" >&2
    exit 1
fi

# Map hostname to server directory (unless SERVER_DIR already set)
if [ -z "${SERVER_DIR:-}" ]; then
    if ! validate_hostname "$CURRENT_HOSTNAME"; then
        echo "Error: Invalid hostname: $CURRENT_HOSTNAME" >&2
        exit 1
    fi
    MAPPED_DIR="$(map_hostname_to_server_dir "$CURRENT_HOSTNAME")"
    SERVER_DIR="$SCRIPT_DIR/$MAPPED_DIR"
    echo "Mapped hostname '$CURRENT_HOSTNAME' to server dir: $MAPPED_DIR"
else
    if ! validate_environment_variable "SERVER_DIR" "$SERVER_DIR" "$SERVERS_ROOT"; then
        echo "Error: Invalid SERVER_DIR environment variable: $SERVER_DIR" >&2
        echo "SERVER_DIR must be within $SERVERS_ROOT/" >&2
        exit 1
    fi
fi

if [ "$DRY_RUN" = true ]; then
    echo "DRY RUN MODE - No changes will be made"
    echo ""
fi

echo "Setting up server configuration for hostname: $CURRENT_HOSTNAME"
echo "Using server config from: $SERVER_DIR"

# Check if server directory exists
if [ ! -d "$SERVER_DIR" ]; then
    echo "Error: Server directory $SERVER_DIR does not exist" >&2
    echo "Create the directory and add a packages.yml file to configure this server" >&2
    exit 1
fi

# Validate packages.yml exists and is safe
PKG_FILE="$SERVER_DIR/packages.yml"
if [ ! -f "$PKG_FILE" ]; then
    if [ "$DRY_RUN" = true ]; then
        echo "No packages.yml found - no packages would be installed"
    else
        echo "Error: Missing packages.yml in $SERVER_DIR" >&2
        exit 1
    fi
else
    if ! validate_yaml_file "$PKG_FILE"; then
        echo "Error: packages.yml failed validation" >&2
        exit 1
    fi
fi

# Handle shared server configurations first
SHARED_SERVER_DIR="$SERVERS_ROOT/shared"
if [ -d "$SHARED_SERVER_DIR" ] && [ "$(ls -A "$SHARED_SERVER_DIR" 2>/dev/null)" ]; then
    if [ "$DRY_RUN" = true ]; then
        echo "SHARED SERVER CONFIG:"
        echo "Would process shared server configurations from $SHARED_SERVER_DIR"
        echo ""
    else
        echo "Processing shared server configurations..."
        # Future: handle shared config files here
    fi
fi

# Handle package management
PLATFORM=$(detect_platform)
echo ""
handle_server_packages "$PLATFORM" "$DRY_RUN"

[ "$DRY_RUN" = false ] && echo "Server setup complete!"

exit 0
