{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "PATH": "~/.claude/wrappers:$PATH"
  },
  "model": "sonnet[1m]",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.local/bin/claude-code-bash-direnv-wrapper"
          }
        ]
      }
    ]
  }
}