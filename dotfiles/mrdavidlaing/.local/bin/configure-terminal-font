#!/bin/bash
# Configure Gnome Console (kgx) to use JetBrains Mono Nerd Font

# Set font configuration for Gnome Console
gsettings set org.gnome.Console custom-font 'JetBrains Mono Nerd Font 12'
gsettings set org.gnome.Console use-custom-font true
gsettings set org.gnome.Console font-scale 1.0

echo "Gnome Console font configured to use JetBrains Mono Nerd Font"